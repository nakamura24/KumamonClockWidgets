<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin" >

	<ImageView
		android:id="@+id/clock_back_ImageView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@drawable/clock_digital" 
		android:contentDescription="@string/app_name" />

	<LinearLayout
		android:orientation="vertical"
		android:gravity="center_horizontal|clip_vertical"
		android:layout_marginTop="@dimen/clock_digital_margin_top"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
		<TextView
			android:id="@+id/clock_date_TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:textSize="@dimen/clock_digital_date_text_size"
			android:textStyle="bold"
			android:text="@string/app_name" />

		<TextView
			android:id="@+id/clock_time_TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="@dimen/clock_digital_time_text_size"
			android:textStyle="bold"
			android:shadowDx="3.0"
			android:shadowDy="3.0"
			android:shadowRadius="2.0"
			android:shadowColor="#ffffff"
			android:text="@string/app_name" />
	</LinearLayout>

</RelativeLayout>
